<%= simple_nested_form_for(@product, html: { class: "f-horizontal" }) do |f| %>
  <div>
    <%= f.label :name, style: "display: block" %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :code, style: "display: block" %>
    <%= f.text_field :code %>
  </div>

  <div>
    <%= f.label :images, style: "display: block" %>
    <%= f.text_field :images %>
    <%= f.file_field :images, :as => :file%>
  </div>

  <div>
    <%= f.submit %>
  </div>
  
<% end %>
