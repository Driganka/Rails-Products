<%= render 'shared/errors', object: post %>

<%= simple_nested_form_for(@product, html: { class: "form-horizontal" }) do |f| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name, style: "display: block" %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :code, style: "display: block" %>
    <%= f.text_field :code %>
  </div>

  <div>
    <%= f.label :description, style: "display: block" %>
    <%= f.text_field :description %>
  </div>

 

  <div> 
    <%= f.fields_for :product_images do |prod_img_subform| %>
      <%= render "product_images/form" , f: prod_img_subform %>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-4">
      <%= f.link_to_add :product_images, data: { target: "#sub-categories-holder" },
        class: "btn btn-block btn-primary" do %>
        <b> + </b> Add Sub Category
      <% end %>
    </div>
  </div>

  <div>
    <%= f.submit %>
  </div>

  
  
<% end %>
